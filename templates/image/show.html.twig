{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="container-fluid symfony-form app-form">

    <h1>Files</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ image.title }}</td>
            </tr>
            <tr>
                <th>FileName</th>
                <td>{{ image.fileName }}</td>
            </tr>
        <tr>
            <th>View file</th>
            <td><a href="{{ asset('uploads/images/' ~ image.fileName) }}">Click to view file</a></td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('file_index') }}">back to list</a>

    <a href="{{ path('file_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
    </div>
{% endblock %}