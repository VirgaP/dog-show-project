{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}
    <div class="container-fluid symfony-form app-form">

    <h1>Show information</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ show.id }}</td>
            </tr>
            <tr>
                <th>DateShow</th>
                <td>{{ show.dateShow ? show.dateShow|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Name of the show</th>
                <td>{{ show.showName }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ show.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ show.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('show_index') }}">back to list</a>

    <a href="{{ path('show_edit', {'id': show.id}) }}">edit</a>

    {{ include('show/_delete_form.html.twig') }}
    </div>
{% endblock %}