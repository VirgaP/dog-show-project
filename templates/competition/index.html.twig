{% extends 'base.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block body %}
    <div class="container-fluid symfony-form app-form">

<h1>List of existing competitions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CompetitionTitle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competition in competitions %}
            <tr>
                <td>{{ competition.id }}</td>
                <td>{{ competition.competitionTitle }}</td>
                <td>
                    <a href="{{ path('competition_show', {'id': competition.id}) }}">show</a>
                    <a href="{{ path('competition_edit', {'id': competition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('competition_new') }}">Create new competition</a>
    </div>
{% endblock %}