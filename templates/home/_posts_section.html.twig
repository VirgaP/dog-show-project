
<!--begin section-white -->
<section class="section-white" id="about">

    <!--begin container -->
    <div class="container">

        {% for row in posts|batch(2) %}

            <div class="row">

                {% for post in row %}

                    {% if loop.length != 1 %}
                        <div class="col-md-6">
                            <h3>{{ post.title }}</h3>
                            <p>{{ post.content }}</p>
                        </div>
                    {% else %}
                        <div class="col-md-12 text-center padding-top-20">
                            <h3>{{ post.title }}</h3>
                            <p>{{ post.content }}</p>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>


        {% endfor %}
    </div>
    <!--end container -->
    </div>

</section>
<!--end section-white -->