{% extends 'base.html.twig' %}

{% block title %}Owner{% endblock %}

{% block body %}
    <div class="container-fluid symfony-form app-form">

    <h1>Member information</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ owner.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ owner.surname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ owner.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ owner.user.email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ owner.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ owner.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ owner.country }}</td>
            </tr>
            <tr>
                <th>Profile created at</th>
                <td>{{ owner.createdAt ? owner.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Profile updated at</th>
                <td>{{ owner.updatedAt ? owner.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <hr>
    <a href="{{ path('dog_new') }}">Register your pet</a>
    <hr>

    <a href="{{ path('member_edit', {'id': owner.id}) }}">edit</a>

    {{ include('owner/_delete_form.html.twig') }}
    </div>
{% endblock %}