{% extends 'base.html.twig' %}

{% block title %}Owner index{% endblock %}

{% block body %}
    <div class="container-fluid symfony-form">

<h1>Members index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Phone</th>
                {#<th>Email</th>#}
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner in owners %}
            <tr>
                <td>{{ owner.id }}</td>
                <td>{{ owner.name }}</td>
                <td>{{ owner.surname }}</td>
                <td>{{ owner.phone }}</td>
                {#<td>{{ owner.email }}</td>#}
                <td>{{ owner.address }}</td>
                <td>{{ owner.city }}</td>
                <td>{{ owner.country }}</td>
                <td>{{ owner.createdAt ? owner.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ owner.updatedAt ? owner.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('owner_show', {'id': owner.id}) }}">show</a>
                    <a href="{{ path('owner_edit', {'id': owner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('owner_new') }}">Create new</a>
    </div>
{% endblock %}