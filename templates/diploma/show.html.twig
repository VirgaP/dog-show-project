{% extends 'base.html.twig' %}

{% block title %}Diploma{% endblock %}

{% block body %}
    <div class="container-fluid symfony-form app-form">

    <h1>Diploma</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Diploma Id</th>
                <td>{{ diploma.id }}</td>
            </tr>
        <tr>
            <th>Diploma No.</th>
            <td>{{ diploma.number }}</td>
        </tr>
        <tr>
            <th>Diploma date</th>
            <td>    {{ diploma.date ? diploma.date |date('Y-m-d') : '' }}</td>
        </tr>
            <tr>
                <th>Bulldog</th>
                <td>{{ diploma.registration.dog.registeredName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('diploma_index') }}">back to list</a>

    <a href="{{ path('diploma_edit', {'id': diploma.id}) }}">edit</a>

    {{ include('diploma/_delete_form.html.twig') }}
    </div>
{% endblock %}