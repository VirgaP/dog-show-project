<form method="post" action="{{ path('show_class_delete', {'id': show_class.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ show_class.id) }}">
    <button class="btn">Delete</button>
</form>